@model List<_2211_Final_Project_TGM_Blog.Models.Forum.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Create", "Category")" class="btn btn-success">Add Category</a>
            }
        </div>
    </div>
    <h1 class="mb-4">Categories</h1>
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text">@category.Description</p>
                    </div>
                    <div class="card-footer">
                        @if (User.IsInRole("Admin"))
                        {
                            <form asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id" method="post" class="delete-form">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        }
                        <a href="@Url.Action("Details", "Category", new { id = category.Id })" class="btn btn-primary">View Threads</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>